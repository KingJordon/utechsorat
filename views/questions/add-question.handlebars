<h1>{{title}}</h1>

<form action="questions/add" method="post">
    <div class="form-group">
        <label for="section">Section</label>
        <input type="text" name="section" class="form-control">
    </div>
    <div class="form-group">
        <label for="text">Text</label>
        <input type="text" name="text" class="form-control">
    </div>
    <div class="form-group">
        <label for="type">Type</label>
        <input type="text" name="type" class="form-control">
    </div>
    {{#if type}}
        <div class="form-group">
            <label for="type">Answer 1</label>
            <input type="text" name="answer1" class="form-control">
        </div>
        <div class="form-group">
            <label for="type">Answer 2</label>
            <input type="text" name="answer1" class="form-control">
        </div>
        <div class="form-group">
            <label for="type">Answer 3</label>
            <input type="text" name="answer1" class="form-control">
        </div>
        <div class="form-group">
            <label for="type">Answer 4</label>
            <input type="text" name="answer1" class="form-control">
        </div>
    {{/if}}
</form>